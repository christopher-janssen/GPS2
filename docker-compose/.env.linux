RESEARCH_DATA_PATH=/home/cjanssen3/mnt/standard/risk

# Restricted Data Path (optional)
# Restricted drive: ~/mnt/restricted → //restricted.drive.wisc.edu/jjcurtin
RESTRICTED_DATA_PATH=/home/cjanssen3/mnt/restricted

# Container Platform
CONTAINER_PLATFORM=linux/amd64
